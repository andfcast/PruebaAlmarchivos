@model IEnumerable<PersonApp.Domain.DTO.PersonaDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Registro de Personas</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Crear nuevo registro</a>
</p>
<table class="table">
    <thead>
        <tr>            
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.TipoIdentificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumIdentificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>            
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.TipoIdentificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumIdentificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a class="btn btn-info" href="@Url.Action("Details","Persona", new { id = item.Id})">Info</a>
                <a class="btn btn-warning" href="@Url.Action("Edit","Persona", new { id = item.Id})">Editar</a>
                <a class="btn btn-danger" href="@Url.Action("Delete","Persona", new { id = item.Id})">Eliminar</a>                                   
            </td>
            
        </tr>
}
    </tbody>
</table>
